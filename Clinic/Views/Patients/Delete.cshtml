@model IdentitySample.Models.ApplicationUser

@{
    ViewBag.Title = "Delete patient";
}

<h2>@ViewBag.Title</h2>
<h4>Are you sure you want to delete <mark>@Model.Name</mark>?</h4>
<hr />
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <dl class="dl-horizontal">
        <dt>
            Patient name
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>


        <dd>
            <br /><input type="submit" value="Delete" class="btn btn-danger" />
        </dd>
    </dl>
}
<div>
    @Html.ActionLink("Go back", "Index")
</div>

