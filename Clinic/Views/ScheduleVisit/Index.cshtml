@model Medcare.Models.ScheduleVisitViewModel

@{
    ViewBag.Title = "Schedule a visit";
}

<h2>@ViewBag.Title</h2>
<h4>Choose one of three ways to schedule a visit</h4>
<hr />
<p class="text-danger">@ViewBag.StatusMessage</p>
<div>
    @using (Html.BeginForm("IndexOne", "ScheduleVisit", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        <div class="form-inline">
            <h3>1. Schedule the earliest visit at:</h3>
            <div class="col-md-3">
                @Html.DropDownList("ClinicId", (SelectList)ViewBag.Clinics, "Select a clinic...", htmlAttributes: new { @class = "form-control" })
            </div>

            <div class="col-md-9">
                <input type="submit" value="Schedule" class="btn btn-info" />
            </div>
        </div>
    }
    <br /><br /><br />
    @using (Html.BeginForm("IndexTwo", "ScheduleVisit", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        <div class="form-inline">
            <h3>2. Schedule the earliest visit with:</h3>
            <div class="col-md-3">
                @Html.DropDownList("DoctorId", (SelectList)ViewBag.Doctors, "Select a doctor...", htmlAttributes: new { @class = "form-control" })
            </div>
            <div class="col-md-9">
                <input type="submit" value="Schedule" class="btn btn-info" />
            </div>
        </div>
        <br /><br /><br />
    }
    @using (Html.BeginForm("IndexThree", "ScheduleVisit", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        <div class="form-inline">
            <h3>3. Search for the visit at:</h3>
            <div class="col-md-3">
                @Html.DropDownList("ClinicId", (SelectList)ViewBag.Clinics, "Select a clinic...", htmlAttributes: new { @class = "form-control" })
            </div>
            <div class="col-md-9">
                <input type="submit" value="Search" class="btn btn-primary" />
            </div>
        </div>

    }
</div>
<br/><br/><br />

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
